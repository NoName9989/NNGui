    minimized = true
    main.Visible = false
    miniSquare.Visible = true
end)

-- Nhấn ô vuông → hiện GUI lại, giữ nguyên tab/vị trí
miniSquare.MouseButton1Click:Connect(function()
    minimized = false
    main.Visible = true
    miniSquare.Visible = false
end)

local localTabFrame = content:FindFirstChild("Local_Content")

-- Hàm tạo nút kèm chú thích đặc biệt, không dùng popup
local function createButtonWithLabel(parent, labelText, buttonText, posY, onClick)
    -- Label chú thích
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -20, 0, 24)
    label.Position = UDim2.new(0, 10, 0, posY)
    label.BackgroundTransparency = 1
    label.Text = "> " .. string.upper(labelText) .. " <"
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.Font = Enum.Font.GothamBlack
    label.TextSize = 18
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = parent

    -- Nút chính
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, -20, 0, 40)
    button.Position = UDim2.new(0, 10, 0, posY + 26)
    button.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    button.BackgroundTransparency = 0.6
    button.Text = "    " .. string.upper(buttonText)
    button.TextColor3 = Color3.fromRGB(230, 230, 230)
    button.Font = Enum.Font.GothamSemibold
    button.TextSize = 14
    button.TextXAlignment = Enum.TextXAlignment.Left
    button.Parent = parent

    -- Bo góc
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 6)
    corner.Parent = button

    -- Hover nhẹ
    button.MouseEnter:Connect(function()
        button.BackgroundTransparency = 0.3
    end)
    button.MouseLeave:Connect(function()
        button.BackgroundTransparency = 0.6
    end)

    -- Mũi tên > cuối nút
    local arrow = Instance.new("TextLabel")
    arrow.Size = UDim2.new(0, 20, 1, 0)
    arrow.Position = UDim2.new(1, -22, 0, 0)
    arrow.BackgroundTransparency = 1
    arrow.Text = ">"
    arrow.TextColor3 = Color3.fromRGB(255, 255, 255)
    arrow.Font = Enum.Font.GothamBold
    arrow.TextSize = 18
    arrow.Parent = button

    -- Click button chỉ chạy action gốc
    button.MouseButton1Click:Connect(onClick)
end

-- Tạo nút copy Discord (không popup)
createButtonWithLabel(localTabFrame, "LINK DISCORD", "Copy Discord Link", 50, function()
    setclipboard("https://discord.gg/abcdef")
    print("DISCORD LINK COPIED!")
end)
